@model Sweetdreams.Models.AddRoleViewModel

@{
    ViewData["Title"] = "Roles";
}

<h4>@Model.User.UserName - Roles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Role.Name" class="control-label"></label>
                <input asp-for="Role.Name" class="form-control" />
                <span asp-validation-for="Role.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@foreach (var item in Model.Roles)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item)
        </td>
        <td>
            <a asp-action="RemoveRole" asp-route-parameters="@Model.User.Id,@item">Remove</a>
        </td>
    </tr>
}


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
